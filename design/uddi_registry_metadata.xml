<?xml version="1.0" encoding="UTF-8"?>
<uddi:save_business xmlns:uddi="urn:uddi-org:api_v3">
    <businessEntity businessKey="uddi:globalbooks.com:business-entity">
        <name xml:lang="en">GlobalBooks Inc.</name>
        <description xml:lang="en">E-commerce platform for book sales and distribution.</description>
        <businessServices>
            <businessService serviceKey="uddi:globalbooks.com:catalog-service" businessKey="uddi:globalbooks.com:business-entity">
                <name xml:lang="en">CatalogService</name>
                <description xml:lang="en">SOAP service for book catalog lookup, including price and availability.</description>
                <bindingTemplates>
                    <bindingTemplate bindingKey="uddi:globalbooks.com:catalog-binding" serviceKey="uddi:globalbooks.com:catalog-service">
                        <description xml:lang="en">SOAP binding for CatalogService operations.</description>
                        <accessPoint useType="endpoint">http://localhost:8080/catalog</accessPoint>
                        <tModelInstanceDetails>
                            <tModelInstanceInfo tModelKey="uddi:globalbooks.com:catalog-interface">
                                <description xml:lang="en">Reference to CatalogService WSDL interface.</description>
                            </tModelInstanceInfo>
                        </tModelInstanceDetails>
                    </bindingTemplate>
                </bindingTemplates>
            </businessService>
        </businessServices>
    </businessEntity>
</uddi:save_business>

<uddi:save_tModel xmlns:uddi="urn:uddi-org:api_v3">
    <tModel tModelKey="uddi:globalbooks.com:catalog-interface">
        <name xml:lang="en">CatalogService Interface</name>
        <description xml:lang="en">Technical model for CatalogService WSDL, defining operations like getBookById and getBooksByCategory.</description>
        <overviewDoc>
            <description xml:lang="en">WSDL document for CatalogService.</description>
            <overviewURL>http://localhost:8080/catalog?wsdl</overviewURL>
        </overviewDoc>
    </tModel>
</uddi:save_tModel>